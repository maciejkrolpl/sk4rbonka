<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Child_and_parent_must_be_same_family</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
    RecordType.DeveloperName &lt;&gt; &apos;Cumulation&apos;,
    sk4_child__r.sk4_family__c  &lt;&gt; sk4_parent__r.sk4_family__c
)</errorConditionFormula>
